{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*", "assets/**/*", "css/**/*", "fonts/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}